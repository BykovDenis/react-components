{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist",
    "jsx": "react",
    "target": "es5",
    "module": "esnext",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "files": [
    "./src/index.tsx"
  ],
  "exclude": [
    "dist"
  ],
  "include": ["**/*",]
}
